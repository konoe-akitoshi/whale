# API設定
# OpenAI API設定
OPENAI_API_KEY=your_api_key_here

# Ollama設定
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llava

# デフォルトのAPI（'openai'または'ollama'）
DEFAULT_API=openai

# WebDAV設定
WEBDAV_URL=https://your-webdav-server.com
WEBDAV_USERNAME=your_username
WEBDAV_PASSWORD=your_password
WEBDAV_ROOT=/
WEBDAV_VERIFY_SSL=true

# 画像評価設定
# 評価スコアの閾値（この値以上のスコアを持つ画像が「良い写真」と判断されます）
QUALITY_THRESHOLD=7.5

# フォルダ設定
# デフォルトの画像フォルダパス（コマンドライン引数で上書き可能）
DEFAULT_IMAGE_FOLDER=./data/images
# 結果保存フォルダ
RESULT_FOLDER=./data/results

# 監視設定（将来的な機能）
# フォルダの変更を監視するかどうか（true/false）
WATCH_FOLDER=false
# 監視間隔（秒）
WATCH_INTERVAL=60
